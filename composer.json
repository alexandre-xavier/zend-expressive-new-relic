{
    "name": "samuelnogueira/new-relic-middleware",
    "description": "PSR-15 Middleware for New Relic instrumentation of PHP middleware apps",
    "type": "library",
    "keywords": [
        "http",
        "middleware",
        "psr",
        "psr-7",
        "psr-15",
        "newrelic"
    ],
    "require": {
        "php": "^7.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "ext-newrelic": "Middleware will do nothing if this extension isn't loaded"
    },
    "autoload": {
        "psr-4": {
            "Samuelnogueira\\NewRelicMiddleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Samuelnogueira\\NewRelicMiddleware\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=tests/reports/coverage.xml",
        "cs-check": "phpcs"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Nogueira",
            "email": "samuel.nogueira@jumia.com"
        }
    ]
}
